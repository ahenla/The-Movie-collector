<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 bg-light mt-3 p-4 rounded">
    <h1 class="mb-3 text-center">Add a movie to <%= @list.name.capitalize %></h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, selected: :movie[0] %>
        <%= f.input :comment %>
        <%= f.submit class: 'btn btn-outline-warning w-100 my-2 ', value: 'add a movie' %>
        <%= link_to 'cancel', list_path(@list), class: 'btn btn-secondary mb-2 w-100'  %>
      <% end %>
    </div>
  </div>
</div>
