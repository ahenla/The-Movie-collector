<div class="container">
  <div class="banner">
    <h1><%= @list.name.capitalize %></h1>
  </div>
  <div class="row justify-content-center">
  <%= link_to 'Add a new movie', new_list_bookmark_path(@list), class: 'btn btn-outline-success'  %>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card col-3" style="width: 18rem;">
      <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <p class="card-text"><%= bookmark.movie.rating %></p>
      </div>
      <%= link_to "remove movie", bookmark_path(bookmark), class: 'btn btn-danger', data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this movie from #{@list.name}"}  %>
    </div>
  <% end %>
  <%= link_to 'Back', lists_path, class: 'btn btn-dark'  %>
  </div>
</div>
