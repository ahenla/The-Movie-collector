<div class='banner' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=@list.photo.attached? ? cl_image_path(@list.photo.key) : @list.movies[0].poster_url %>)">
  <%# <% image_tag "banner.jpg", alt: "banner-img"%>
  <div class="container">
    <h1 class="fs-1"><%= @list.name.capitalize %></h1>
    <%= link_to 'Add a new movie', new_list_bookmark_path(@list), class: 'btn btn-warning mt-3'  %>
    <%= link_to 'Home', lists_path, class: 'btn btn-outline-light mt-3'  %>
  </div>
</div>

<div class="container mb-5">
  <div class="row justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card col-3 py-3 m-2">
      <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><strong></strong><%= bookmark.movie.title %></strong></h5>
        <p class="card-text">Overview: <%= bookmark.movie.overview %></p>
        <p class="card-text"> rating <%= bookmark.movie.rating %></p>
      </div>
      <%= link_to "remove from list", bookmark_path(bookmark), class: 'btn btn-outline-danger', data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this movie from #{@list.name}"}  %>
    </div>
  <% end %>
  </div>
</div>
