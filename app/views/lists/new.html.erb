<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 bg-light mt-5 p-3 rounded">
     <h1 class="my-3 text-center">Create a new list</h1>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name, placeholder: 'Enter the list name...' %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn btn-outline-success w-100 my-3' %>
      <% end %>
    </div>
  </div>
</div>
